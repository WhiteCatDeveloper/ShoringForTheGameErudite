<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context=".view.MenuActivity">

    <Button
        android:id="@+id/buttonToStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_to_start"
        android:layout_margin="8dp"
        android:background="@color/colorYellow"
        android:onClick="onClickToActivityScoring"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings"
        android:layout_margin="8dp"
        android:background="@color/colorYellow"
        android:onClick="onClickToSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToStart" />
</androidx.constraintlayout.widget.ConstraintLayout>